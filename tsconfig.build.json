{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "lib/typescript",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/__tests__/**",
    "**/__fixtures__/**",
    "**/__mocks__/**",
    "example/**",
    "lib/**"
  ]
}
